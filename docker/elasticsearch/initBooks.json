{
  "settings" : {
    "number_of_shards" : 3,
    "number_of_replicas" : 1,
    "index": {
      "analysis": {
        "analyzer": {
          "myCustomAnalyzer": {
            "type": "custom",
            "tokenizer": "myCustomTokenizer",
            "filter": ["myCustomFilter1", "myCustomFilter2"],
            "char_filter": ["myCustomCharFilter"]
          }
        },
        "tokenizer": {
          "myCustomTokenizer": {
            "type": "letter"
          },
          "myCustomNGramTokenizer": {
            "type" : "ngram",
            "min_gram" : 2,
            "max_gram" : 3
          }

        },
        "filter": {
          "myCustomFilter1": {
            "type": "lowercase"
          },
          "myCustomFilter2": {
            "type": "kstem"
          }
        },
        "char_filter": {
          "quotes" : {
            "mappings" : [
                   "\\u0091=>\\u0027",
                   "\\u0092=>\\u0027",
                   "\\u2018=>\\u0027",
                   "\\u2019=>\\u0027"
            ],
            "type" : "mapping"
          },
          "myCustomCharFilter": {
            "type": "mapping",
            "mappings": ["ph=>f", " u => you ", "ES=>Elasticsearch"]
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
    }
  }
}
